@using PSF.Dominio.Entities;

@{
    ViewData["Title"] = "Porte";
}

@model List<Porte>

<table class="table table-striped table-sm">
    <thead>
        <tr>
            <th>Id</th>
            <th>Tamanho</th>
            <th>Sigla</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.Id
                </td>
                <td>
                    @item.Tamanho
                </td>
                <td>
                    @item.Sigla
                </td>

                <td>
                    <a class="btn btn-danger btn-xs" asp-action="Excluir" asp-controller="Porte" asp-route-id="@item.Id">
                        <i class="glyphicon glyphicon-trash"></i>
                    </a>

                </td>
            </tr>
        }
        <a class="btn btn-xs" asp-controller="Porte" asp-action="Inserir">
            <i class="glyphicon glyphicon-trash"></i>
            Novo Cadastro
        </a>

    </tbody>
</table>